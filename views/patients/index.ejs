<link rel="stylesheet" href="/stylesheets/patients.css">

<div class="container">
  <form class="content">

<h3 class="heading">Patients</h3>
<a href="/patients/create" class="btn btn-primary">Add</a>
<table class="table table-hover  table-light table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">City</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% patients.forEach(patient => { %>
      <tr>
        <th scope="row"><%= patient.full_name %></th>
        <td><%= patient.city %></td>
        <td><%= patient.age %></td>
        <td><%= patient.gender%></td>
        <td>
          <a href="/patients/<%= patient._id %>" class="btn btn-warning">Edit</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
</form>
</div>